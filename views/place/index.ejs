<% layout('layout/app') %>
<h1>All Places</h1>
<% for(let place of places){ %>
<div class="col-12">
  <div class="card mb-3">
    <div class="row g-0">
      <div class="col-md-4">
        <img
          src="<%= place.image %>"
          class="img-fluid rounded-start"
          alt="..."
        />
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= place.title %></h5>
          <p class="card-text"><%= place.description %></p>
          <p class="card-text">
            <small class="text-body-secondary"><%= place.location %></small>
          </p>

          <a class="btn btn-primary" href="/places/<%= place._id %>"
            >View <%= place.title %></a
          >
        </div>
      </div>
    </div>
  </div>
</div>
<%}%>
